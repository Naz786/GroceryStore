<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-85790036-1', 'auto');
        ga('send', 'pageview');

    </script>

</head>
<body>
    <div class="login-navbar navbar-inverse navbar-fixed-top">
        
        <div class="container">
            
            <div class="navbar-header">
                <button type="button" class="fr navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="@Url.Action("Index", "ShoppingCart", "")" class="cart-icon btn btn-info" type="button">
                     Cart <span class="badge cart-count">@Model.CartCount</span>
                </a>
                <span id="add-update"></span>
            </div>

            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="background-blue-color navbar">
        <div class="container">
            <div class="cf relative">
                <div class="fl ribbon ribbon-left"><div class="VCent">Get More...</div></div>                
                <a href="@Url.Action("Index","Home")">
                    <div class="logo-container fl">
                        <div class="HVCent logo"></div>
                    </div>
                </a>

                <a href="@Url.Action("CreateContact","Home")">
                    <div class="sign-up-logoREMOVED"> </div>
                </a>

                    <div class="fr ribbon ribbon-right"><div class="VCent">For Less...</div></div>
</div>
            <div class="cf">

            </div>
        </div>
    </div>
    <div class="page-background">
        <div class="container body-content" style="position: relative">
            @RenderBody()
        </div>
    </div>
    <footer>
        <div>
            <div class="container">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="ribbon ribbon-left"><div class="VCent">Clean...</div><div class="for-less-image" id="clean"></div></div>
                        <div class="ribbon ribbon-left"><div class="VCent">Cook...</div><div class="for-less-image" id="cook"></div></div>
                        <div class="ribbon ribbon-left"><div class="VCent">Drink...</div><div class="for-less-image" id="drink"></div></div>
                        <div class="for-less">For Less...</div>
                    </div>
                    <div class="col-xs-6">
                        <div class="logo VCent"></div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="container">
                <div class="row">
                    <div class="col-xs-6">COPYRIGHT &#169; @DateTime.Now.Year VALUEVILLE</div>
                    <div class="col-xs-6 text-right">WEB DESIGN: SMOKIN DONUT LTD</div>
                </div>
            </div>
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")



    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
