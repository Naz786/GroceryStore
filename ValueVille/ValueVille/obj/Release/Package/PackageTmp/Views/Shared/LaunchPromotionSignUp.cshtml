@model ValueVille.Models.Contact
@{
    ViewBag.Title = "ValueVille - Getting More For Less";
}

<div class="sign-up-instruction-container cf">
    <div class="competition-banner real" style="display:none"></div>
    <div class="competition-banner dummy fl"></div>
    <div class="sign-up-instructions fl">
        <h2>Sign Up To ValueVille</h2>
        <p>Simply fill out the form below to register with ValueVille and we'll keep you up to date with special deals and the great services we'll be adding as we grow.</p>
    </div>
</div>

@using (Html.BeginForm("CreateContact", "Home", FormMethod.Post, new { id = "contactForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <p style="color: #0091BA;">@ViewBag.Message</p>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmailAddress, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sign Up" class="btn btn-primary btn-default" />
            </div>
        </div>
    </div>
}

<div class="sign-up-instruction-container cf">
    <div class="competition-banner dummy fl"></div>
    <div class="sign-up-instructions fl">
        <h2>Visit ValueVille</h2>
        <p>In the meantime, pop down to ValueVille and check out our range of toiletries, bathroom and kitchen essentials, sweets, drinks and toys from big brands and small prices and discover what it means to get more for less.</p>
        <p>We're on Prince Rupert drive, opposite the Buckingham Park community centre. Find us using the map below.</p>
    </div>
</div>

<div class="sign-up-instruction-container cf" style="margin-top: 30px;">
    <div class="competition-banner dummy fl"></div>
    <div class="sign-up-instructions fl">
        <h2>Find ValueVille</h2>
        <div id="map"></div>
    </div>
</div>
<script>
    function initializeMap() {
        var LatLng = { lat: 51.835184, lng: -0.820928 };

            var mapCanvas = document.getElementById('map');

            var mapOptions = {
                center: LatLng,
                zoom: 14,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            }

            var map = new google.maps.Map(mapCanvas, mapOptions);

            var image = {
                url: '/Content/Images/MapMarker.png',
                // The origin for this image is (0, 0).
                origin: new google.maps.Point(0, 0),
                // The anchor for this image is the base of the flagpole at (0, 32).
                anchor: new google.maps.Point(32, 32)
            };

            var marker = new google.maps.Marker({
                position: LatLng,
                map: map,
                icon: image,
                title: 'ValueVille, 295 Prince Rupert Dr, Aylesbury HP19'
            });
    }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCBFdNzaFQRwXxOBYammvxs42Xq4aKmWYE"></script>
<script>google.maps.event.addDomListener(window, 'load', initializeMap)</script>
