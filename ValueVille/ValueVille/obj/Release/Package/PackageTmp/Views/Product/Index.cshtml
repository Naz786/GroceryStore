@model ValueVille.Models.ProductIndexViewModel 
@using ValueVille.Models

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

@Html.ActionLink("Create New", "Create", new { id = Model.CategoryId}, new { @class = "btn btn-success" })


<table class="panel panel-default table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Products[0].Name)
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products[0].Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products[0].Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products[0].ShowOnIndex)
        </th>
        <th>
            
        </th>
    </tr>

@foreach (var item in Model.Products) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.Image(item.ByteImage, "Product_Image", "100")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.TrueOrFalse(item.ShowOnIndex)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id, productName = item.Name }, new { @class = "btn btn-info "}) |
            @Html.ActionLink("Details", "Details", new { id=item.Id, productName = item.Name }, new { @class = "btn btn-info " }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id, productName = item.Name }, new { @class = "btn btn-danger " })
        </td>
    </tr>
}

</table>

@Html.ActionLink("Back to List", "Index", new { Controller = "Category", id = Model.CategoryId }, new { @class = "btn btn-info" })
