@model ValueVille.Models.CategoryViewModel
@using ValueVille.Models

@{
    ViewBag.Title = "Details";
}

<h2>Category Details</h2>

<table class="panel panel-default table form-horizontal">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>

        <th>  </th>
    </tr>

    <tr>
        <td>
            @Html.DisplayFor(m => Model.Name)
        </td>
        <td>
            <img src="@Model.OutputImage" alt="@Model.Name" height="100" />
