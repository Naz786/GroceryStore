@model IEnumerable<ValueVille.Models.CategoryViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>All Categories</h2>

@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })

<table class="panel panel-default table">
    <tr class="panel-heading">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>

        <th>  </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                <a href="@Url.Action("Index", "Product", new { id = item.GenerateSlug(item.Id, item.Name)})"> 
                    @Html.DisplayFor(m => item.Name)
                </a>
            </td>
           
            <td>
                <img src="@item.OutputImage" alt="@item.Image" height="100" />
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id, categoryName = item.Name}, new { @class = "btn btn-info "}) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, categoryName = item.Name }, new { @class = "btn btn-info " }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, categoryName = item.Name }, new { @class = "btn btn-danger " })
            </td>
        </tr>
    }

</table>
